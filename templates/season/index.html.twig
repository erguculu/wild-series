{% extends 'base.html.twig' %}

{% block title %}
	{{ 'season'|trans }}
{% endblock %}

{% block body %}
<h1>{{ 'season'|trans }}</h1>

<table class="table">
	<thead>
		<tr>
			<th>{{ 'id'|trans }}</th>
			<th>{{ 'number'|trans }}</th>
			<th>{{ 'year'|trans }}</th>
			<th>{{ 'description'|trans }}</th>
			<th>{{ 'action'|trans }}</th>
		</tr>
	</thead>
	<tbody>
		{% for season in seasons %}
			<tr>
				<td>{{ season.id }}</td>
				<td>{{ season.number }}</td>
				<td>{{ season.year }}</td>
				<td>{{ season.description }}</td>
				<td>
					<a href="{{ path('season_show', {'id': season.id}) }}">{{ 'show'|trans }}</a>
					<a href="{{ path('season_edit', {'id': season.id}) }}">{{ 'edit'|trans }}</a>
				</td>
			</tr>
		{% else %}
			<tr>
				<td colspan="5">{{ 'no.saison.found'|trans }}</td>
			</tr>
		{% endfor %}
	</tbody>
</table>

<a href="{{ path('season_new') }}">{{ 'create'|trans }</a>
{% endblock %}
