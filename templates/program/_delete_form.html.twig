<form method="post" action="{{ path('program_delete', {'id': program.id}) }}" onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer cette série?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ season.id) }}">
    <button class="btn btn-danger">{{ 'delete'|trans }}</button>
</form>
