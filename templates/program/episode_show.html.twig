{# templates/program/episode_show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Saison #{{ season.number }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="container">
            <div class="season_description">
               
                <h2>{{ Program.title }}, Saison {{ season.number }}, Episode {{ episode.number }}</h2>
                    <p>Episode : {{ episode.title }}</p>
                    <p>Résumé : {{ episode.synopsis }}</p>
                    <a href="{{ path('program_season_show', { programId: Program.id, seasonId: season.id }) }}">
                         Retour à la liste des épisodes de {{Program.title}}</a>
            </div>
                <a class="nav-link" href="{{ path('episode_new') }}">Ajouter un Episode</a>
            <a href="{{ path('program_index') }}">
                Retour à la liste des programmes
            </a>
        </div>
    </div>
{% endblock %}