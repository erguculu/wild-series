{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
  <div class="container-fluid">
        <div class="container">
            <div class="category_description">
<h2>Catégories</h2>
{% for category in categories %}
<p><a href="{{ path('category_show', { categoryName: category.name }) }}">{{ loop.index }} - {{ category.name }}</a></p>
{% else %}
   </div>
    </div>
<p>Pas de catégories à afficher.</p>
</div>
{% endfor %}
{% endblock %}