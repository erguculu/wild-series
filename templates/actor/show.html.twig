{% extends 'base.html.twig' %}

{% block title %}
	{{ actor.firstname }}
{% endblock %}

{% block body %}
	<h2>{{ actor.firstname }}</h2>
	<ul>
		{% for program in actor.programs %}
			<li>
				<a href="{{ path('program_show', {slug : program.slug}) }}">{{ program.title }}</a>
			</li>
		{% else %}
			<li>{{ 'no.serie.found'|trans }}</li>
		{% endfor %}
	</ul>
	<a href="{{ path('program_index') }}">
		{{ 'back.home'|trans }}
	</a>

	<a href="{{ path('actor_edit', {'id': actor.id}) }}">{{ 'edit'|trans }}</a>
	{{ include('actor/_delete_form.html.twig') }}
{% endblock %}
