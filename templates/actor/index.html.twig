{% extends 'base.html.twig' %}

{% block title %}{{ 'actor'|trans }}{% endblock %}

{% block body %}
<h2>{{ 'all.actor'|trans }}</h2>
<ul>
    {% for actor in actors %}
    <li><a href="{{ path('actor_show', {id : actor.id }) }}">{{ actor.firstname }}</a></li>
    {% else %}
    <li>{{ 'no.actor.found'|trans }}</li>
    {% endfor %}
</ul>
<a href="{{ path('app_index') }}">
        {{ 'back.home'|trans }}
    </a>
{% endblock %}
