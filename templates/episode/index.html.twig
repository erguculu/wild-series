{% extends 'base.html.twig' %}

{% block title %}
	{{ 'episode'|trans }}
{% endblock %}

{% block body %}
	<h1>{{ 'episode'|trans }}</h1>

	<table class="table">
		<thead>
			<tr>
				<th>{{ 'id'|trans }}</th>
				<th>{{ 'title'|trans }}</th>
				<th>{{ 'number'|trans }}</th>
				<th>{{ 'synopsis'|trans }}</th>
				<th>{{ 'action'|trans }}</th>
			</tr>
		</thead>
		<tbody>
			{% for episode in episodes %}
				<tr>
					<td>{{ episode.id }}</td>
					<td>{{ episode.title }}</td>
					<td>{{ episode.number }}</td>
					<td>{{ episode.synopsis }}</td>
					<td>
						<a href="{{ path('episode_show', {'slug': episode.slug})}}">
							{{ 'show'|trans }}</a>
						<a href="{{ path('episode_edit', {'slug': episode.slug})}}">
							{{ 'edit'|trans }}</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">{{ 'no.episode.found'|trans }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('episode_new') }}">{{ 'create'|trans }}</a>
{% endblock %}
