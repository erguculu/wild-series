<form method="post" action="{{ path('episode_delete', {'slug': episode.slug}) }}" onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer cet épisode?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ episode.id) }}">
    <button class="btn btn-danger">{{ 'delete'|trans }}</button>
</form>
